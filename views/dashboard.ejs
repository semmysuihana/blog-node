</head>
<body>
  <!-- loading -->
  <div class="loading-overlay" id="loadingOverlay">
    <div class="loading-spinner"></div>
    </div>

    <!-- header -->
    <header class="bg-light fixed-top">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand text-dark" href="/" style="font-family:Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif; letter-spacing: 2px;font-size: 1.3em; margin-right: 70px;"><img src="/public/asset/logo.png" alt="" srcset="" width="35"></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
    
          <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
              <li class="nav-item">
                <a class="nav-link text-dark" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-dark" href="/dashboard">Dashboard</a>
              </li>
              <li class="nav-item">
                <a class="nav-link text-dark" href="/profil">Profil</a>
              </li>
              <!-- Tambahkan menu lain di sini -->
            </ul>
    
            <div class="my-2 my-lg-0 ml-auto">
              <% if(userNama){ %>
                <div class="dropdown">
                  <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <img src="/public/asset/user.png" alt="" width="30"> 
                    <b class="m-2 text-light"><%= userNama %></b>
                  </button>
                  <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                    <div class="profile-card">
                      <div class="profile-bg">
                        <img src="/public/asset/user.png" alt="" width="80" class="profile-img">
                      </div>
                      <div class="profile-info">
                        <h4 class="profile-name"><%= userNama %></h4>
                        <p class="profile-email"><%= typeUser %></p>
                        <a class="dropdown-item" href="/profil">Profil</a>
                        <a class="dropdown-item" href="/dashboard">Dashboard</a>
                        <div class="dropdown-divider"></div>
                        <a href="/logout" class="btn btn-danger btn-logout">Logout</a>
                      </div>
                    </div>
                  </div>
                </div>
              <% }else { %>
                <a href="/login" class="btn btn-primary">Login</a>
                <a href="/daftar" class="btn btn-warning">Sign-up</a>
              <% } %>
            </div>
            <form class="form-inline ml-lg-3">
              <input class="form-control mr-sm-2" type="search" placeholder="Search">
            </form>
          </div>
        </div>
      </nav>
    </header>
 
  <!-- hero -->
<div class="hero"></div>
  <div class="hero-caption">
  <h1>Welcome to Dashboard <%= userNama %></h1>
  <p><a href="/">Home</a> / Dashboard</p>
</div>


<!-- content -->
<div class="content">
  <div class="container">
  
      <% if(typeUser == "admin") {%>
        <div class="card" style="width: 18rem;">
          <img src="../public/asset/blog.jpg" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">BLOG</h5>
            <p class="card-text">Total Blog : <%= blogCount %></p>
            <a href="/table-blog" class="btn btn-primary">View</a>
          </div>
        </div>
  
        <div class="card" style="width: 18rem;">
          <img src="../public/asset/users.png" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">USERS</h5>
            <p class="card-text">Total Users : <%= userCount %></p>
            <a href="/table-users" class="btn btn-primary">View</a>
          </div>
        </div>
  
        <div class="card" style="width: 18rem;">
          <img src="../public/asset/comment.png" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">COMMENT</h5>
            <p class="card-text">Total COMMENT : <%= 0 %></p>
            <a href="#" class="btn btn-primary">View</a>
          </div>
        </div>
  
      <% } else { %>
  
        <div class="card" style="width: 18rem;">
          <img src="../public/asset/blog.jpg" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">BLOG</h5>
            <p class="card-text">Total Blog : <%= blogCount %></p>
            <a href="/table-blog" class="btn btn-primary">View</a>
          </div>
        </div>
  
        <div class="card" style="width: 18rem;">
          <img src="../public/asset/hero.jpg" class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title"><%= userNama %></h5>
            <p class="card-text"><%= typeUser %></p>
            <a href="/profil" class="btn btn-primary">View</a>
          </div>
        </div>
  
      <% } %>
      
  </div>
  
</div>




