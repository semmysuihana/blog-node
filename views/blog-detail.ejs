            <% function checkLetter(text) {
              let result = '';
              let tagOpen = '';
              for (let i = 0; i < text.length; i++) {
                if (text[i] === '|') {
                  result += '<br><br>';
                }
                else if (text[i] === '~') {
                  if (tagOpen === '<b>') {
                    result += '</b>';
                    tagOpen = '';
                  } else {
                    result += '<b>';
                    tagOpen = '<b>';
                  }
                }
                else {
                  result += text[i];
                }
              }
              if (tagOpen === '<b>') {
                result += '</b>';
              }
              return result;
            } %>
          
