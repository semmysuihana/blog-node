<!-- content -->
<div class="content">
    <div class="container rounded bg-white mt-5 mb-5">
        <div class="row">
            <div class="col-md-3 border-right">
                <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded-circle mt-5" width="150px" src="/public/asset/user.png"><span class="font-weight-bold"><%= userNama %></span><span class="text-black-50"><%= emailUser %></span><span> </span></div>
            </div>
            <div class="col-md-5 border-right">
                <form class="p-3 py-5" method="post" action="/profil"> <!-- Tambahkan action untuk mengarahkan ke rute yang sesuai -->
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h4 class="text-right">Profile Settings</h4>
                    </div>
                    <div class="row mt-2">
                        <div class="col-md-6"><label class="labels">Name</label><input type="text" class="form-control" name="name" placeholder="first name" value="<%= userNama %>"></div>
                        <div class="col-md-6"><label class="labels">Email</label><input type="text" class="form-control" name="email" value="<%= emailUser %>" placeholder="surname"></div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12"><label class="labels">Username</label><input type="text" class="form-control" name="username" placeholder="enter phone number" value="<%= userName %>"></div>
                    </div>
                    <div class="row mt-3">
                        <h4>Ubah Password</h4>
                        <div class="col-md-6">
                            <label class="labels">Password Lama</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="passwordLama" name="passwordLama" value="">
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <i id="togglePasswordLama" class="fa fa-eye" onclick="togglePassword('passwordLama')"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <label class="labels">Password Baru</label>
                            <div class="input-group">
                                <input type="password" class="form-control" id="passwordBaru" name="passwordBaru" value="">
                                <div class="input-group-append">
                                    <span class="input-group-text">
                                        <i id="togglePasswordBaru" class="fa fa-eye" onclick="togglePassword('passwordBaru')"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="mt-5 text-center"><button class="btn btn-primary profile-button" type="submit" value="Submit">Save Profile</button></div>
                </form>
                
            </div>
            <div class="col-md-4" style="background-image: url(/public/asset/hero.jpg);background-size: cover;background-position: center;">
                
            </div>
        </div>
    </div>
